<p id="notice"><%= notice %></p>

<h1>Item Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Pedido</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_pedidos.each do |item_pedido| %>
      <tr>
        <td><%= item_pedido.pedido_id %></td>
        <td><%= item_pedido.valor %></td>
        <td><%= link_to 'Show', pedido_item_pedido_path(@pedido, item_pedido) %></td>
        <td><%= link_to 'Edit', edit_pedido_item_pedido_path(@pedido, item_pedido) %></td>
        <td><%= link_to 'Destroy', pedido_item_pedido_path(@pedido, item_pedido), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Item Pedido', new_pedido_item_pedido_path %>
<%= link_to 'Voltar', pedidos_path %>